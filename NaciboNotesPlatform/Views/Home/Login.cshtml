@model LoginVM
@{
    ViewBag.Title = "NaciboNotes - Giriş Sayfası";
    Layout = "~/Views/Shared/_Layout_2.cshtml";
}

<link href="~/Content/login-register.css" rel="stylesheet" />
<script src="//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

@using (Html.BeginForm())
{
    <div class="container">
        <div class="login-container">
            <div id="output"></div>
            <h4 class="text-center"> <span class="glyphicon glyphicon-user" aria-hidden="true"></span> Giriş Formu </h4>
            <hr />
           
            @Html.ValidationSummary(false)

            <div class="form-box">
                @Html.TextBoxFor(x => x.Username, new { name = "user", placeholder = "Kullanıcı adı", type = "text" })
                @Html.TextBoxFor(x => x.Password, new { placeholder = "şifre", type = "password" })


                <button class="btn btn-info btn-block login" type="submit">Giriş</button>

            </div>
        </div>

    </div>
}


