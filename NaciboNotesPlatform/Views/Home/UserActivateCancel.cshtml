@using Project.ENTITIES.Messages
@model List<ErrorMessageObj>
@{
    ViewBag.Title = "Hesap Geçersiz";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/login-register.css" rel="stylesheet" />
<script src="//netdna.bootstrapcdn.com/bootstrap/3.1.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!------ Include the above in your HEAD tag ---------->

@using (Html.BeginForm())
{
    <div class="container">
        <div class="login-container">
            <div id="output"></div>
            <h4 class="text-center">  Yönlendiriliyorsunuz... </h4>
            <hr />

            <div class="form-box">
                <div class="text-danger">
                    <h4> <span class="glyphicon glyphicon-remove"></span>&nbsp;&nbsp;&nbsp;Geçersiz İşlem.. </h4>
                </div>
                <p class="text-justify">
                    @foreach (ErrorMessageObj item in Model)
                    {
                        @item.Message <br />
                    }
                </p>

            </div>
        </div>

    </div>

}

<script>
    $(function () {

        setTimeout(function () {
            window.location = "/Home/Index";


        }, 10000);


    });
</script>

