@model IEnumerable<Project.ENTITIES.Models.Note>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <h2>Notes</h2>
        <p>
            <a href="/Note/Create" class="btn btn-primary">
                <span class="glyphicon glyphicon-plus"></span> Create
            </a>
        </p>
    </div>
</div>

<div class="row">
    <div class="col-md-10 col-md-offset-1">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Category.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Text)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsDraft)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LikeCount)
                </th>

                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Text)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsDraft)
                    </td>
                     <td>
                        @Html.DisplayFor(modelItem => item.LikeCount)
                    </td>

                    <td width="150px">
                        <button type="button" class="btn btn-success btn-xs" data-toggle="modal" data-target="#modal_comment" data-note-id="@item.ID">
                            <span class="glyphicon glyphicon-comment"></span>
                        </button>
                        @MyBootstrap.LinkButton("/Note/Edit/" + item.ID, "warning", "btn-xs", "Edit", "edit", string.Empty)
                        @MyBootstrap.LinkButton("/Note/Details/" + item.ID, "info", "btn-xs", "Details", "search", string.Empty)
                        @MyBootstrap.LinkButton("/Note/Delete/" + item.ID, "danger", "btn-xs", "Delete", "trash", string.Empty)

                    </td>
                </tr>
            }

        </table>
    </div>

</div>
@MyBootstrap.ModalPopup(id: "modal_comment", title: "Yorumlar")

<script src="~/Scripts/comment.js"></script>

<script>
    $(function () {
        $("footer").hide();
    });

</script>