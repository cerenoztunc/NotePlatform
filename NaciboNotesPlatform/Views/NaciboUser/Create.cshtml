@model Project.ENTITIES.Models.NaciboUser

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/Content/Validation-Summary.css" rel="stylesheet" />
<div class="row">
