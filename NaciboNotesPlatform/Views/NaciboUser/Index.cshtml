@model IEnumerable<Project.ENTITIES.Models.NaciboUser>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row pt-3 mr-0 mb-0">
        <div class="col-md-12 m-5 mb-0">
            <p class="display-4 border-bottom">
                Kullanıcılar
            </p>
        </div>

    </div>
    <div class="row mr-0 p-0">
        <div class="col-md-12">
            <p class="mt-0 m-5">
                @MyBootstrap.LinkButton("/NaciboUser/Create", "primary", "", string.Empty, "plus", " Kullanıcı Ekle")
            </p>
        </div>
        <div class="col-md-12">
            <table class="table table-striped table-sm m-5">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.LastName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Password)
                    </th>



                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Password)
                        </td>


                        <td>
                            @MyBootstrap.LinkButton("/NaciboUser/Edit/" + item.ID, "warning", "btn-sm", "Edit", "edit", string.Empty)
                            @MyBootstrap.LinkButton("/NaciboUser/Details/" + item.ID, "info", "btn-sm", "Details", "search", string.Empty)
                            @MyBootstrap.LinkButton("/NaciboUser/Delete/" + item.ID, "danger", "btn-sm", "Delete", "trash", string.Empty)

                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>

<script>
    $(function () {
        $("footer").hide();
    });

</script>


