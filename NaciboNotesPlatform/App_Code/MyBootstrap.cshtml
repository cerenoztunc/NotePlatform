@helper ModalPopup(string id = "", string title = "", bool showCloseButton = true)
{
    <!-- Modal -->
    <div class="modal fade" id="@id" name="@id" tabindex="-1" role="dialog" aria-labelledby="@(id +"_label")">
        <div class="modal-dialog modal-dialog-scrollable" role="document">
            <div class="modal-content">
                <div class="modal-header" id="@(id +"_header")">
                    
                    <h4 class="modal-title" id="@(id +"_label")">@title</h4>

                </div>
                <div class="modal-body" id="@(id +"_body")">

                </div>
                <div class="modal-footer" id="@(id +"_footer")">
                    @if (showCloseButton)
                    {
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Kapat</button>
                    }
                </div>
            </div>
        </div>
    </div>


}